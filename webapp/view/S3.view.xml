<core:View xmlns:m="sap.m" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:form="sap.ui.layout.form"
	xmlns:semantic="sap.m.semantic" controllerName="edu.weill.cornell.wbg.fjv.approve.controller.S3">
	<m:App>
		<m:pages>
			<m:Page title="{i18n>/title}" showHeader="false">
				<m:content class="sapUiResponsiveMargin">
					<ObjectHeader intro="{TaskInfo>/DocText}" title="{/WiText}"
						number="{path: '/Totamt', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 2 }}" numberUnit="{/Waers}" responsive="true"
						fullScreenOptimized="false" backgroundDesign="Translucent" numberState="Success">
						<attributes>
							<ObjectAttribute text="{/Bktxt}" title="Header Text"/>
							<ObjectAttribute text="{/Zfiscalp}" title="Posting Period"/>
						</attributes>
						<statuses/>
					</ObjectHeader>
					<IconTabBar expandable="false" expanded="true" applyContentPadding="false" backgroundDesign="Solid" upperCase="false" visible="true"
						selectedKey="Ok" select="_onIconTabBarSelect">
						<items>
							<IconTabFilter text="{i18n>tabDDHdr}" id="DispData">
								<content>
									<Table noDataText="No Data" id="ItemsList"
										items="{ path : '/TaskDtl_Lines/results', sorter :{ path : 'ZjvAppGrp', descending: true, group : true } }">
										<items>
											<ColumnListItem>
												<cells>
													<ObjectIdentifier title="{Buzei}" text="{Sgtxt}" titleActive="false" visible="true"/>
													<ObjectIdentifier title="{Hkont}" text="{Txt20Skat}" titleActive="false" visible="true"/>
													<ObjectIdentifier title="{Fundwbs}" text="{Fundwbstxt}" titleActive="false" visible="true"/>
													<ObjectIdentifier title="{Xref1}" text="{Zeile}" titleActive="false" visible="true"/>
													<ObjectIdentifier title="{Aufnr}" text="" titleActive="false" visible="true"/>
													<ObjectIdentifier title="{Pernr}" text="" titleActive="false" visible="true"/>
													<ObjectIdentifier title="{Bukrs}" text="" titleActive="false" visible="true"/>
													<!--<ObjectIdentifier title="{path : 'Wrbtr'}" text="{Waers}" visible="true"/>-->
													<ObjectNumber
														number="{parts: [ {path: 'Wrbtr'}, {path: 'Waers'}], type : 'sap.ui.model.type.Currency', formatOptions: { showMeasure: false }}"
														unit="{Waers}" state="{= ${Shkzg} === 'S' ? 'None' : 'Warning' }" textAlign="Initial"/>
													<!--<ObjectNumber number="{path : 'Wrbtr'}" unit="{Waers}" visible="true" state="{= ${Shkzg} === 'S' ? 'None' : 'Warning' }" textAlign="Initial"/>-->
												</cells>
											</ColumnListItem>
										</items>
										<columns>
											<Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="" demandPopin="false" popinDisplay="Inline" mergeDuplicates="false">
												<header>
													<Label text="Item" design="Bold"/>
												</header>
											</Column>
											<Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="" demandPopin="false" popinDisplay="Inline" mergeDuplicates="false">
												<header>
													<Label text="GL Account" design="Bold"/>
												</header>
											</Column>
											<Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="" demandPopin="false" popinDisplay="Inline" mergeDuplicates="false">
												<header>
													<Label text="Fund/WBS" design="Bold"/>
												</header>
											</Column>
											<Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Desktop" demandPopin="false" popinDisplay="Inline"
												visible="{TaskInfo>/colwbsorig}" mergeDuplicates="true">
												<header>
													<Label text="WBS Orig Doc" design="Bold"/>
												</header>
											</Column>
											<Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Desktop" demandPopin="false" popinDisplay="Inline"
												visible="{TaskInfo>/colio}" mergeDuplicates="false">
												<header>
													<Label text="IO" design="Bold"/>
												</header>
											</Column>
											<Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Desktop" demandPopin="false" popinDisplay="Inline"
												visible="{TaskInfo>/colpernr}" mergeDuplicates="false">
												<header>
													<Label text="Personnel No" design="Bold"/>
												</header>
											</Column>
											<Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Desktop" demandPopin="false" popinDisplay="Inline"
												visible="{TaskInfo>/colbukrs}" mergeDuplicates="false">
												<header>
													<Label text="Cross CC" design="Bold"/>
												</header>
											</Column>
											<Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Phone" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
												<header>
													<Label text="Amount" design="Bold"/>
												</header>
											</Column>
										</columns>
									</Table>
								</content>
							</IconTabFilter>
							<IconTabFilter text="{i18n>tabWBSCostTr}" count="" design="Vertical" showAll="false" textDirection="Inherit" enabled="true"
								visible="{TaskInfo>/showWBS}" iconDensityAware="false" id="WBSCostTransfer">
								<content>
									<Panel expandable="true" expanded="true"
										headerText="A description of the expenses being transferred, including why and when the original charge(s) occurred" width="auto"
										class="sapUiResponsiveMargin">
										<content>
											<Text text="{/ZwbsCstTrQ1}"/>
										</content>
									</Panel>
									<Panel expandable="true" expanded="true" headerText="Why the receiving account was not originally charged" width="auto"
										class="sapUiResponsiveMargin">
										<content>
											<Text text="{/ZwbsCstTrQ2}"/>
										</content>
									</Panel>
									<Panel expandable="true" expanded="true"
										headerText="Why it is appropriate to charge the receiving account and how the expense is allocable to that account" width="auto"
										class="sapUiResponsiveMargin">
										<content>
											<Text text="{/ZwbsCstTrQ3}"/>
										</content>
									</Panel>
								</content>
							</IconTabFilter>
							<IconTabFilter text="{i18n>tabAttach}" count="" design="Vertical" showAll="false" textDirection="Inherit" enabled="true"
								visible="{TaskInfo>/Attachments}" iconDensityAware="false" id="Attachments">
								<content>
									<UploadCollection id="UploadCollection" maximumFilenameLength="55" multiple="true" change="onChange" uploadButtonInvisible="true"
										beforeUploadStarts="onBeforeUploadStarts" items="{ path : '/TaskDtl_Attach/results'}">
										<items>
											<UploadCollectionItem contributor="{AttachedBy}" documentId="{documentId}" fileName="{Filename}" fileSize="{Filesize}" mimeType="{mimetype}"
												thumbnailUrl="{thumbnailUrl}" url="{Url}" visibleDelete="false" visibleEdit="false" enableEdit="false" enableDelete="false"
												uploadedDate="{path: 'AttachedAt', type: 'sap.ca.ui.model.type.DateTime', formatOptions: { style: 'short'}}"
												press="onDownloadItem" >
												<attributes>
													<ObjectAttribute title="{'Attached'}" text="{path : 'text', formatter : '.formatAttribute'}" active="{active}"/>
												</attributes>
											</UploadCollectionItem>
										</items>
									</UploadCollection>
								</content>
							</IconTabFilter>
							<IconTabFilter text="{i18n>tabWFLHdr}" count="" design="Vertical" showAll="false" textDirection="Inherit" enabled="true"
								visible="{TaskInfo>/Workflowlog}" iconDensityAware="false" id="WorkFlowLog"/>
						</items>
					</IconTabBar>
				</m:content>
			</m:Page>
		</m:pages>
	</m:App>
</core:View>