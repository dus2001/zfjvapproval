<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" displayBlock="true">
	<UploadCollection id="UploadCollection" maximumFilenameLength="55" multiple="true" change="onChange" uploadButtonInvisible="true"
		beforeUploadStarts="onBeforeUploadStarts" items="{ path : 'JV>/TaskDtl_Attach/results'}">
		<items>
			<UploadCollectionItem contributor="{JV>AttachedBy}" documentId="{JV>documentId}" fileName="{JV>Filename}" fileSize="{JV>Filesize}" mimeType="{JV>mimetype}"
				thumbnailUrl="{JV>thumbnailUrl}" url="{JV>Url}" visibleDelete="false" visibleEdit="false" enableEdit="false" enableDelete="false"
				uploadedDate="{path: 'JV>AttachedAt', type: 'sap.ca.ui.model.type.DateTime', formatOptions: { style: 'short'}}" press="onDownloadItem">
				<attributes>
					<ObjectAttribute title="{'Attached'}" text="{path : 'text', formatter : '.formatAttribute'}" active="{active}"/>
				</attributes>
			</UploadCollectionItem>
		</items>
	</UploadCollection>
</mvc:View>