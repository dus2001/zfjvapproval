<mvc:View xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	controllerName="edu.weill.cornell.wbg.fjv.approve.controller.S3_WorkflowLog">
	<Table noDataText="No Data" id="zzidWFLog" items="{ path: 'JVAppr>/results' , sorter : { path:'Zzstplvlkey' , group:true} }">
		<items>
			<ColumnListItem>
				<cells width="3rem">
					<core:Icon src="{ path: 'JVAppr>Zjvwflvlst',formatter: '.formatter.WorkflowLogIcon'}"
						tooltip="{ path: 'JVAppr>Zjvwflvlst',formatter: '.formatter.WorkflowLogToolTip'}"/>
				</cells>
				<cells>
					<Text text="{JVAppr>Zjvapprtyt}"/>
				</cells>
				<cells>
					<Text text="{JVAppr>ZounameSD}"/>
				</cells>
				<cells visible="{= !(${JVAppr>Zcreat} === '0')}">
					<HBox>
						<Text text="{JVAppr>Emnam}" visible="{= !(${JVAppr>Zcreat} === '0')}"/>
						<Link text="{i18n>apprLinkText}" app:approvers="{JVAppr>ApproverSet}" press="handleShowApprovers" visible="{= ${JVAppr>Zcreat} === '0'}"/>
					</HBox>
				</cells>
				<cells>
					<!--<Text text="{ path:'Zcreat', formatter:'.formatter.formatTimeStamp'}"/>-->
					<!--<Text text=" {path : 'Zcreat', type : new sap.ui.model.type.DateTime, formatOptions: { style : 'medium'}} "/>-->
					<!--<Text text="{Zcreat}" visible="{= !(${Zcreat} == '0') }"/>-->
					<Text text="{JVAppr>ApproveAt}" visible="{= !(${JVAppr>Zcreat} === '0')}"/>
				</cells>
			</ColumnListItem>
		</items>
		<columns>
			<Column width="3rem">
				<header><Label text=""/></header>
			</Column>
			<Column>
				<header><Label text="{i18n>aprTypeLbl}"/></header>
			</Column>
			<Column>
				<header><Label text="{i18n>apprDeptLbl}"/></header>
			</Column>
			<Column>
				<header><Label text="{i18n>apprNameLbl}"/></header>
			</Column>
			<Column>
				<header><Label text="{i18n>apprTimeLabel}"/></header>
			</Column>
		</columns>
	</Table>
	<Text text="{i18n>dynWFMsg}"/>
</mvc:View>